<h1>Shopping Cart</h1>

<hr>

<% if @products.any?() %>
  <form action="/shopping_cart" method="get">
    <% @products.each() do |product| %>
      <input type="checkbox" name="purchase" value="purchase"><%= product.product_name() %> | $<%= product.price() %><p></p>
    <% end %>
    <button type="submit">Add product!</button>
  </form>

<% else %>
  <p>There are no products yet!</p>
<% end %>

<hr>

<span class="return"><p><a href="/">Click here to go back to previous page</a></p></span>
